{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier"],
	"plugins": ["prettier"],
	"rules": {
		"no-plusplus": "warn",
		"no-unused-vars": "error",
		"prettier/prettier": ["error"],
		"linebreak-style": ["off", "windows"],
		"no-restricted-globals": "off"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	}
}
